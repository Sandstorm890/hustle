<h1>Create a New Employer Account</h1>
<%= render partial: "layouts/error", locals: {object: @employer}  %>

<%= form_for(Employer.new, url:'/employer_signup')do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.label :company %>
    <%= f.text_field :company %><br><br>
    <%= f.label :bio %>
    <%= f.text_field :bio %><br><br>
    <%= f.submit "Sign Up"%>
<% end %>