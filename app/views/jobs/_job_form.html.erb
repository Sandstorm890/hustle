<%= render partial: "layouts/error", locals: {object: @job}  %>

<%= form_for(@job) do |f| %>
    <%= f.label "Address:", class: "lead" %><br>
    <%= f.text_field :address %><br><br>
    <%= f.label "Category: ", class: "lead" %>
    <%= f.select :category, ["Construction", "Landscaping", "IT", "Computer Repair", "Catering"] %><br><br>
    <%= f.label "Start Date: ", class: "lead" %><br><br>
    <%= f.date_select :start_date %><br><br>
    <%= f.time_select :start_date, :ignore_date => true %><br><br>
    <%= f.label "End Date:", class: "lead" %><br><br>
    <%= f.date_select :end_date %><br><br>
    <%= f.time_select :end_date, :ignore_date => true %><br><br>
    <%= f.label "Desired Rate:", class: "lead" %><br><br>
    <%= f.number_field :rate %><br><br>

    <%= f.submit %><br><br>
<% end %>
