<h2>Create a New Worker Account</h2><br>
<%= render partial: "layouts/error", locals: {object: @user}  %>

<%= form_for(@user, url:'/user_signup')do |f|%>
    <%= f.label :first_name, class: "lead" %>
    <%= f.text_field :first_name %><br><br>
    <%= f.label :last_name, class: "lead" %>
    <%= f.text_field :last_name %><br><br>
    <%= f.label :username, class: "lead" %>
    <%= f.text_field :username %><br><br>
    <%= f.label :email, class: "lead" %>
    <%= f.email_field :email %><br><br>
    <%= f.label :password, class: "lead" %>
    <%= f.password_field :password %><br><br>
    <%= f.label :bio, class: "lead" %>
    <%= f.text_field :bio %><br><br>
    <%= f.submit "Sign Up"%>
<% end %>